<div class="container">
  <div class="header clearfix">
    <nav>
      <ul class="nav nav-pills float-right">
        <li class="nav-item">
          <a class="nav-link active" href="/login">Login <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/signup">Sign up</a>
        </li>
      </ul>
    </nav>
  </div>
  <!-- Main Container -->
  <div class="jumbotron">
    <h1 class="display-3">WishWidget</h1>
    {{!-- <p class="lead">What are you wishing for today?</p> --}}
    <form class="form-inline mt-2 mt-md-0" id="etsy-search">
      <input id="etsy-terms" class="form-control mr-sm-2" type="text" placeholder="What are you wishing for today?"
        aria-label="What are you wishing for today?"><br>
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
  <div class="content">
    <div class="container">
      <p id="auth-message">You must sign up or log in to save items to your wishlist</p>
      <div id="etsy-images" class="row"></div>
      <div class="row">
        {{#each wishes}}
        <!-- make this a for loop in handlebars -->
        {{> wishes/wishes-block}}
        {{/each}}
      </div>
    </div>
  </div>
</div>

<footer class="footer">
  <p>&copy; WishWidget team 2018</p>
  <nav>
    <ul class="nav nav-pills">
      <li class="nav-item">
        <a class="nav-link" href="https://github.com/chandana-k/Project_2_team_4">Github</a>
      </li>
    </ul>
  </nav>
</footer>

